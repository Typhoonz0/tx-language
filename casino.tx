fn addWinnings ; type ; bet ; result ; mode {
    global balance
    balance = changetype: balance ; int
    bet = changetype: bet ; int
    if ; result == type {
        if ; mode == "ff" {
            winnings = bet * 2
        }
        else {
            winnings = bet * 36
        }
        balance += winnings - bet
        std.out: "\nYou won $" ; winnings ; "!\n"
        save : balance
        roulette:
    }
    else {
        balance -= bet
        std.out: "\nYou lost $" ; bet ; "\n"
        save : balance
        roulette:
    }
}

